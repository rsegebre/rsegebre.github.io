source "https://rubygems.org" #  Specifies the source for downloading gems.

# This will help ensure the proper Jekyll version is running.
gem "jekyll" #  Includes the Jekyll gem itself.

# Jekyll plugins are gems that enhance site functionality.
group :jekyll_plugins do
  gem "jekyll-sitemap" #  Generates a sitemap for SEO.
  gem "jekyll-feed"    #  Generates an Atom feed for your blog.
  gem "jekyll-seo-tag" #  Adds SEO tags to your site's header.
end